# Example environment variables for RAG Chatbot AWS Deployment
# Copy this file to .env.development, .env.staging, or .env.production
# and update the values according to your AWS deployment

# API Configuration
VITE_API_URL=https://your-alb-domain.amazonaws.com/api
VITE_API_TIMEOUT=30000

# Application Settings
VITE_APP_NAME=RAG Chatbot
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=production
VITE_DEBUG_MODE=false

# AWS Configuration
VITE_AWS_REGION=us-east-1
VITE_S3_BUCKET=your-s3-bucket-name
VITE_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# Feature Configuration
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true

# Feature Flags
VITE_ENABLE_PDF_HIGHLIGHTING=true
VITE_ENABLE_DOCUMENT_UPLOAD=true
VITE_MAX_FILE_SIZE=10485760

# Development Environment Example:
# VITE_API_URL=http://localhost:3001/api
# VITE_DEBUG_MODE=true
# VITE_ENABLE_ANALYTICS=false
# VITE_CLOUDFRONT_DOMAIN=localhost:5173

# Staging Environment Example:
# VITE_API_URL=https://your-alb-staging.amazonaws.com/api
# VITE_APP_NAME=RAG Chatbot (Staging)
# VITE_ENVIRONMENT=staging
# VITE_DEBUG_MODE=true
